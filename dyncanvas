<body>
  <canvas id="circuitCanvas"></canvas>

  <div class="button-wrapper">
    <button type="submit" class="btn-primary">Join Now</button>
  </div>

  <script>
    const canvas = document.getElementById("circuitCanvas");
    const ctx = canvas.getContext("2d");
    let width, height;

    function resizeCanvas() {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
    }

    window.addEventListener("resize", resizeCanvas);
    resizeCanvas();

    const lines = [];
    const numLines = 100;

    for (let i = 0; i < numLines; i++) {
      lines.push({
        x: Math.random() * width,
        y: Math.random() * height,
        length: Math.random() * 60 + 20,
        speed: Math.random() * 0.5 + 0.2,
        alpha: Math.random() * 0.5 + 0.3,
        angle: Math.random() > 0.5 ? 0 : Math.PI / 2,
      });
    }

    function animate() {
      ctx.clearRect(0, 0, width, height);
      for (let line of lines) {
        ctx.save();
        ctx.translate(line.x, line.y);
        ctx.rotate(line.angle);
        ctx.beginPath();
        ctx.moveTo(0, 0);
        ctx.lineTo(line.length, 0);
        ctx.strokeStyle = `rgba(212, 175, 55, ${line.alpha})`;
        ctx.lineWidth = 1.5;
        ctx.shadowBlur = 8;
        ctx.shadowColor = "#d4af37";
        ctx.stroke();
        ctx.restore();

        if (line.angle === 0) {
          line.x += line.speed;
          if (line.x > width) line.x = -line.length;
        } else {
          line.y += line.speed;
          if (line.y > height) line.y = -line.length;
        }
      }
      requestAnimationFrame(animate);
    }

    animate();
  </script>
</body>
</html>
